{
    "model": "opus",
    "cleanupPeriodDays": 30,
    "permissions": {
        "allow": [
            "Bash(**)",
            "Edit(./**)",
            "Edit(../dbatools/**)",
            "Read(./**)",
            "Read(../dbatools/**)",
            "Write(./**)",
            "Write(../dbatools/**)",
            "MultiEdit(./**)",
            "MultiEdit(../dbatools/**)",
            "WebSearch(*)",
            "WebFetch(domain:*)",
            "Task(**)",
            "Grep(**)",
            "Glob(**)",
            "LS(**)"
        ],
        "deny": [
            "Bash(rm -rf /)",
            "Bash(sudo rm:*)",
            "Write(/etc/**)",
            "Edit(/etc/**)"
        ]
    },
    "env": {
        "CLAUDE_CODE_DANGEROUSLY_SKIP_PERMISSIONS": "1",
        "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
        "DISABLE_COST_WARNINGS": "0",
        "DISABLE_AUTOUPDATER": "1",
        "BASH_DEFAULT_TIMEOUT_MS": "300000",
        "BASH_MAX_TIMEOUT_MS": "1200000",
        "MAX_THINKING_TOKENS": "200000",
        "SHELL": "/usr/bin/pwsh"
    }
}